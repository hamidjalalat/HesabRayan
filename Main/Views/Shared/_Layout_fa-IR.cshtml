<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Links.Content.bootstrap_min_css" rel="stylesheet" />
    <script src="@Links.scripts.jquery_3_4_1_min_js"></script>
    <script src="@Links.scripts.bootstrap_min_js"></script>
    <link href="@Links.Content.bootstrap_rtl_css" rel="stylesheet" />
    <script src="@Links.scripts.jquery_validate_vsdoc_js"></script>
    <script src="@Links.scripts.jquery_validate_min_js"></script>
    <script src="@Links.scripts.jquery_validate_unobtrusive_min_js"></script>
    <script src="@Links.scripts.modernizr_2_6_2_js"></script>
    <link href="@Links.Content.Site_css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title - My ASP.NET Application</title>

</head>
<body>
    <div class="container">



        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/Image/la.png" alt="Los Angeles">

                </div>
                <div class="carousel-item">
                    <img src="~/Content/Image/chicago.png" alt="Chicago">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/Image/ny.png" alt="New York">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <!-- Brand -->
            <a class="navbar-brand" href="#">Logo</a>

            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">ثبت نام</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">نظرات</a>
                </li>

                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                      درباره ما
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Link 1</a>
                        <a class="dropdown-item" href="#">Link 2</a>
                        <a class="dropdown-item" href="#">Link 3</a>
                    </div>
                </li>
            </ul>
        </nav>


    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>